<%= form_with(model: post, style: "max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);") do |form| %>
  <% if post.errors.any? %>
    <div style="color: #dc3545; background-color: #f8d7da; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
      <h2 style="margin: 0 0 10px; font-size: 18px;"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul style="padding-left: 20px; margin: 0;">
        <% post.errors.each do |error| %>
          <li style="font-size: 16px;"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, style: "display: block; font-weight: bold; margin-bottom: 8px; font-size: 16px;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 10px; border: 1px solid #ced4da; border-radius: 5px; font-size: 16px; box-shadow: inset 0px 1px 3px rgba(0, 0, 0, 0.1);" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :body, style: "display: block; font-weight: bold; margin-bottom: 8px; font-size: 16px;" %>
    <%= form.text_area :body, style: "width: 100%; padding: 10px; border: 1px solid #ced4da; border-radius: 5px; font-size: 16px; height: 150px; box-shadow: inset 0px 1px 3px rgba(0, 0, 0, 0.1);" %>
  </div>

  <div style="text-align: center;">
    <%= form.submit "Save Post", style: "background-color: #007bff; color: #fff; padding: 12px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);" %>
  </div>
<% end %>
